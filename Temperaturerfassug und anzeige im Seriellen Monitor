#include <OneWire.h>
#include <DallasTemperature.h>

#define ONE_WIRE_BUS 2

OneWire wirebus(ONE_WIRE_BUS);

DallasTemperature sensors(&wirebus);

void setup(void)
{
  Serial.begin(9600);
  sensors.begin();
}

void loop(void)
{
  Serial.println("lese Daten ein");
  
  sensors.requestTemperatures();

  float gradCelsius = sensors.getTempCByIndex(0);
  if(gradCelsius != DEVICE_DISCONNECTED_C)
  {
    Serial.print("Die Zimmertemperatur betr√§gt: ");
    Serial.println(gradCelsius);
  }
  else
  {
    Serial.println("Ein Fehler ist aufgetreten...");
  }   
}
